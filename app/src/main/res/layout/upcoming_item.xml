<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView android:id="@+id/card_view"
    android:layout_width="250dp"
    android:layout_height="130dp"
    android:layout_margin="5dp"
    android:elevation="10dp"
    app:cardCornerRadius="18dp"
    app:cardElevation="10dp"
    app:cardBackgroundColor="#3e46c7"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/upcoming_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/arialregular"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

        <View
            android:id="@+id/SplitLine_hor1"
            android:layout_width="match_parent"
            android:layout_height= "1dp"
            android:layout_below="@+id/upcoming_item_title"
            android:background="#3557C7" />

        <TextView
            android:id="@+id/upcoming_item_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:fontFamily="@font/arialregular"
            android:text="Type"
            android:layout_centerVertical="true"
            android:layout_marginStart="20dp"
            android:textColor="#FFFFFF"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/upcoming_item_date_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date/Time"
            android:fontFamily="@font/arialregular"
            android:textStyle="italic"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:textColor="#80FFFFFF"
            android:textSize="12sp"
            android:layout_marginBottom="20dp"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>

</androidx.cardview.widget.CardView>